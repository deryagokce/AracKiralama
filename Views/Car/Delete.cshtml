@{
    ViewData["Title"] = "Delete";
}
@model Car
<h2>Arabayı Sil</h2>
<hr />
<h4>"@Model.Name" adlı aracı silmeyi onaylıyor musunuz ?</h4>
<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
    <a asp-action="Index" class="btn btn-primary btn-sm">İptal</a>
</form>