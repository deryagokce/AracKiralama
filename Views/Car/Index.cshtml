@{
    Layout = "_LayoutAdmin";
}
@model List<CarModel>
<h2>Arabalar</h2>
<hr />
<a asp-action="Add" asp-controller="Car" class="btn btn-primary btn-sm mb-2">Ekle</a>
@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">Henüz araba yeklenmemiş!</div>
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Adı</td>
            <td>Fiyatı</td>
            <td>Durumu</td>
            <td>Ekleme</td>
            <td>Güncelleme</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Name</td>
                <td>@car.Price</td>
               <td>
                    @if (car.IsActive)
                    {
                            <span class="badge bg-success text-white">Mevcut</span>
                    }
                    else
                    {
                            <span class="badge bg-danger text-white">Kirada</span>
                    }
               </td>
               <td>@car.Created</td>
               <td>@car.Updated</td>
                <td>
                    <a asp-action="Update" asp-controller="Car" class="btn btn-primary btn-sm" asp-route-id="@car.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Car" class="btn btn-danger btn-sm" asp-route-id="@car.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>