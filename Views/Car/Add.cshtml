@{
    ViewData["Title"] = "Add";
}
@model Car
<h2>Araba Ekle</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Car" asp-action="Add" method="post">
            <div class="mb-2">
                <label asp-for="Name">Araba Adı</label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <input asp-for="IsActive" class="form-check-inline" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}